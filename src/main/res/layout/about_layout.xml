<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="@drawable/background2" >

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="@string/menu_home"
            android:layout_span="3"
            android:padding="18dp"
            android:layout_gravity="center_horizontal" />

    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="@string/menu_help"
            android:layout_span="3"
            android:padding="18dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <TextView
            android:text="Click on the news item to either view, share, save or listen to it. News is sorted out in tabs based on the category."
            android:layout_weight="3"
            android:padding="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="italic"
            android:textSize="15dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

          <TextView
              android:text="Click on this button to refresh."
              android:layout_weight="3"
              android:padding="20dp"
              android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:drawableLeft="@drawable/smallrefresh"
              android:textStyle="italic"
              android:textSize="15dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <TextView
            android:text="Click this button to view the saved news articles."
            android:layout_weight="3"
            android:padding="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/smallsaved"
            android:textStyle="italic"
            android:textSize="15dp" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">


        <TextView
            android:text="More news categories can be selected from the settings menu. Once selected hit the refresh button to view the new categories."
            android:layout_weight="3"
            android:padding="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/smallsettings"
            android:textStyle="italic"
            android:textSize="15dp" />

    </TableRow>


</TableLayout>